(define-key elfeed-search-mode-map (kbd "w") 'elfeed-eww-open)
(define-key elfeed-search-mode-map (kbd "f") 'elfeed-firefox-open)
(define-key elfeed-search-mode-map (kbd "d") 'elfeed-youtube-dl)



