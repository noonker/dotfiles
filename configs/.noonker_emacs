(defun passc ()
  "Copy the password of the entry in the current buffer."
  (interactive)
    (helm-find-files-1 "~/.password-store/Internet")
    (goto-char (point-min))
    (copy-region-as-kill (point) (line-end-position))
    (kill-this-buffer))

(global-set-key (kbd "C-<return>") 'passc)

