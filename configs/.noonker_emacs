;; Slack code for highlighted text
;; Todo auto expand the selected reason
(defun sc (b e)
  "adds slack tags for code"
  (interactive "r")
  (save-restriction
    (narrow-to-region b e)
    (save-excursion
      (goto-char (point-min))
        (insert (format "%s\n" "```"))
	(goto-char (point-max))
        (insert (format "\n%s" "```"))
        )))

