(defun character-below ()
  (save-excursion
    (next-line)
    (string (char-after (point)))))


(defun replace-below (cur rep bel)
  (interactive)
  (let ((pos 1)
	(tmp))
    (while (< pos (point-max))
      (if (equal cur (string (char-after pos)))
	  (if (equal bel (character-above))
	      (progn (delete-char 1) (insert rep))
	      ))
      (setq pos (+ 1 pos))
      (goto-char pos)
    )))

